<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>标题</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="../../../../../layuiadmin/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="../../../../../layuiadmin/style/admin.css" media="all">
</head>
<body>

<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">搜索条件1</label>
                    <div class="layui-input-inline">
                        <input type="text" name="queryObj.name" placeholder="请输入" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">搜索条件2</label>
                    <div class="layui-input-inline">
                        <input type="text" name="queryObj.name" placeholder="请输入" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <button class="layui-btn layuiadmin-btn-comm" data-type="reload" lay-submit lay-filter="CarMonthOftenrunRoute-search">
                        <i class="layui-icon layui-icon-search layuiadmin-button-btn"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="layui-card-body">
            <div style="padding-bottom: 10px;">
                <button class="layui-btn layuiadmin-btn-comm" data-type="batchdel">删除</button>
                <button class="layui-btn layuiadmin-btn-comm" data-type="add">添加</button>
            </div>
            <table id="CarMonthOftenrunRoute-list" lay-filter="CarMonthOftenrunRoute-list"></table>
            <script type="text/html" id="table-CarMonthOftenrunRoute-list">
                <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="edit"><i class="layui-icon layui-icon-edit"></i>编辑</a>
                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del"><i class="layui-icon layui-icon-delete"></i>删除</a>
            </script>
        </div>
    </div>
</div>
<script src="../../../../../layuiadmin/layui/layui.js"></script>
<script>
        layui.config({
            base: '../../../../../layuiadmin/' //静态资源所在路径
        }).extend({
            index:'lib/index',
            common:'common'
        }).use(['index','table', 'form','common'], function(exports){
            var $ = layui.$
                ,table = layui.table
                ,common = layui.common
                ,admin = layui.admin
                ,form = layui.form;

            //查询
            form.on('submit(CarMonthOftenrunRoute-search)', function(data){
                var field = data.field;

                //执行重载
                table.reload('CarMonthOftenrunRoute-list', {
                    where: field
                });
            });

            /*
            * 定义表格
            * */
            defineTable = function () {
                var headers = layui.admin.getTokenHeader();
                table.render({
                    elem: '#CarMonthOftenrunRoute-list' //指定原始表格的选择器（id选择器）
                    ,url:layui.setter.basePath +'/admin/carMonthOftenrunRoute/listpage.jsn' //模拟接口
                    ,headers:headers
                    ,method: 'post'
                    ,parseData: function(res){ //res 即为原始返回的数据
                        return {
                            "code": res.success, //解析接口状态
                            "msg": res.errMsg, //解析提示文本
                            "count": res.totalCount, //解析数据长度
                            "data": res.list //解析数据列表
                        };
                    }
                    ,response: {
                        statusCode: true //规定成功的状态码，默认：0
                    }
                    ,cols: [[
                        {type: 'checkbox', fixed: 'left'}
                    ,{field: 'id',align: 'center', width: 200, title: '主键',sort: true,hide:true}
                    ,{field: 'createTime',align: 'center', width: 200, title: '创建时间',templet: function(d){
                    return common.DateFormat(d.createTime,"yyyy-MM-dd");},sort: true}
            ,{field: 'carPlateNum',align: 'center', width: 200, title: '车牌号',sort: true}
            ,{field: 'carFrameNum',align: 'center', width: 200, title: '车架号',sort: true}
            ,{field: 'carPlateColor',align: 'center', width: 200, title: '车牌颜色',sort: true}
            ,{field: 'carRealId',align: 'center', width: 200, title: '关联车辆id',sort: true}
            ,{field: 'ownerTeamId',align: 'center', width: 200, title: '所属企业ID',sort: true}
            ,{field: 'ownerTeamName',align: 'center', width: 200, title: '所属企业名',sort: true}
            ,{field: 'startProvinceId',align: 'center', width: 200, title: '出发省ID',sort: true}
            ,{field: 'startProvinceName',align: 'center', width: 200, title: '出发省名',sort: true}
            ,{field: 'endProvinceId',align: 'center', width: 200, title: '目的省ID',sort: true}
            ,{field: 'endProvinceName',align: 'center', width: 200, title: '目的省名',sort: true}
            ,{field: 'startCityId',align: 'center', width: 200, title: '出发城市ID',sort: true}
            ,{field: 'startCityName',align: 'center', width: 200, title: '出发城市名',sort: true}
            ,{field: 'endCityId',align: 'center', width: 200, title: '目的城市ID',sort: true}
            ,{field: 'endCityName',align: 'center', width: 200, title: '目的城市名',sort: true}
            ,{field: 'runRoute',align: 'center', width: 200, title: '路线',sort: true}
            ,{field: 'runNum',align: 'center', width: 200, title: '次数',sort: true}
            ,{field: 'sumMileage',align: 'center', width: 200, title: '总里程',sort: true}
            ,{field: 'carType',align: 'center', width: 200, title: '车辆类型',sort: true}
            ,{field: 'countType',align: 'center', width: 200, title: '统计类型',sort: true}
                    ,{field: 'countTime',align: 'center', width: 200, title: '统计时间',templet: function(d){
                    return common.DateFormat(d.countTime,"yyyy-MM-dd");},sort: true}
            ,{field: 'monthStr',align: 'center', width: 200, title: '月份',sort: true}
            ,{field: 'countMonth',align: 'center', width: 200, title: 'countMonth',sort: true}
            ,{field: 'yearNum',align: 'center', width: 200, title: '年份',sort: true}
            ,{field: 'quarterType',align: 'center', width: 200, title: '季度',sort: true}
                    ,{title: '操作', minWidth: 150, align: 'center', fixed: 'right', toolbar: '#table-CarMonthOftenrunRoute-list'}
            ]]
            ,autoSort: false
                    ,page: true
                    ,limit: 10
                    ,limits: [10, 20, 30,40]
                    ,text: {
                    none: '暂无相关数据'
                }
            });

                //为toolbar添加事件响应
                table.on('tool(CarMonthOftenrunRoute-list)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
                    /*var data = obj.data;*///获得当前行数据
                    //区分事件
                    switch(obj.event){
                        case 'del':
                            deleteVo(obj);
                            break;
                        case 'edit':
                            editVo(obj);
                            break;
                    };
                });

                //监听排序事件
                table.on('sort(CarMonthOftenrunRoute-list)', function(obj){ //注：sort是工具条事件名，LAY-app-province-list是table原始容器的属性 lay-filter="对应的值"
                    var sort = obj.field;
                    //默认排序
                    switch(obj.field){
                        case 'id':
                            sort ="ID";
                            break;
                        case 'createTime':
                            sort ="CREATE_TIME";
                            break;
                        case 'carPlateNum':
                            sort ="CAR_PLATE_NUM";
                            break;
                        case 'carFrameNum':
                            sort ="CAR_FRAME_NUM";
                            break;
                        case 'carPlateColor':
                            sort ="CAR_PLATE_COLOR";
                            break;
                        case 'carRealId':
                            sort ="CAR_REAL_ID";
                            break;
                        case 'ownerTeamId':
                            sort ="OWNER_TEAM_ID";
                            break;
                        case 'ownerTeamName':
                            sort ="OWNER_TEAM_NAME";
                            break;
                        case 'startProvinceId':
                            sort ="START_PROVINCE_ID";
                            break;
                        case 'startProvinceName':
                            sort ="START_PROVINCE_NAME";
                            break;
                        case 'endProvinceId':
                            sort ="END_PROVINCE_ID";
                            break;
                        case 'endProvinceName':
                            sort ="END_PROVINCE_NAME";
                            break;
                        case 'startCityId':
                            sort ="START_CITY_ID";
                            break;
                        case 'startCityName':
                            sort ="START_CITY_NAME";
                            break;
                        case 'endCityId':
                            sort ="END_CITY_ID";
                            break;
                        case 'endCityName':
                            sort ="END_CITY_NAME";
                            break;
                        case 'runRoute':
                            sort ="RUN_ROUTE";
                            break;
                        case 'runNum':
                            sort ="RUN_NUM";
                            break;
                        case 'sumMileage':
                            sort ="SUM_MILEAGE";
                            break;
                        case 'carType':
                            sort ="CAR_TYPE";
                            break;
                        case 'countType':
                            sort ="COUNT_TYPE";
                            break;
                        case 'countTime':
                            sort ="COUNT_TIME";
                            break;
                        case 'monthStr':
                            sort ="MONTH_STR";
                            break;
                        case 'countMonth':
                            sort ="COUNT_MONTH";
                            break;
                        case 'yearNum':
                            sort ="YEAR_NUM";
                            break;
                        case 'quarterType':
                            sort ="QUARTER_TYPE";
                            break;
                    };
                    if(obj.type==null){
                        return;
                    }
                    //有些时候，你可能需要根据当前排序的字段，重新向服务端发送请求，从而实现服务端排序，如：
                    table.reload('CarMonthOftenrunRoute-list', {
                        initSort: obj//记录初始排序，如果不设的话，将无法标记表头的排序状态。
                        ,where: { //请求参数（注意：这里面的参数可任意定义，并非下面固定的格式）
                            orderBy: sort+" "+obj.type //排序字段
                        }
                    });
                });
            }
            defineTable();

            //删除
            deleteVo = function (obj) {
                layer.confirm('确定删除此记录吗？', function(index){
                    admin.req({
                        url:layui.setter.basePath +'/admin/carMonthOftenrunRoute/deleteByIds.jsn',
                        data:{'ids':obj.data.id},
                        method:"post",
                        success:function (data) {
                            table.reload('CarMonthOftenrunRoute-list',
                                {page:
                                    { curr: common.deleteJumpPage(obj) // 执行页面跳转方法
                                    }
                                }
                            );
                            layer.close(index);
                            layer.msg('删除成功', {
                                icon: 1
                            });
                        },
                    });
                });
            }
            //编辑
            editVo = function (obj) {
                layer.open({
                    type: 2
                    ,title: '编辑'
                    ,content: 'CarMonthOftenrunRouteEdit.html'
                    ,maxmin: true
                    ,area: ['550px', '550px']
                    ,btn: ['确定', '取消']
                    ,success: function(layero, index){
                        var s = layero.find('iframe');
                        $("id",s[0].contentWindow.document).val(obj.data.id);
                        //给iframe元素赋值
                        var othis = layero.find('iframe').contents().find("#CarMonthOftenrunRoute-form").click();

                        othis.find('input[name="id"]').val(obj.data.id);
                        othis.find('input[name="createTime"]').val(obj.data.createTime);
                        othis.find('input[name="carPlateNum"]').val(obj.data.carPlateNum);
                        othis.find('input[name="carFrameNum"]').val(obj.data.carFrameNum);
                        othis.find('input[name="carPlateColor"]').val(obj.data.carPlateColor);
                        othis.find('input[name="carRealId"]').val(obj.data.carRealId);
                        othis.find('input[name="ownerTeamId"]').val(obj.data.ownerTeamId);
                        othis.find('input[name="ownerTeamName"]').val(obj.data.ownerTeamName);
                        othis.find('input[name="startProvinceId"]').val(obj.data.startProvinceId);
                        othis.find('input[name="startProvinceName"]').val(obj.data.startProvinceName);
                        othis.find('input[name="endProvinceId"]').val(obj.data.endProvinceId);
                        othis.find('input[name="endProvinceName"]').val(obj.data.endProvinceName);
                        othis.find('input[name="startCityId"]').val(obj.data.startCityId);
                        othis.find('input[name="startCityName"]').val(obj.data.startCityName);
                        othis.find('input[name="endCityId"]').val(obj.data.endCityId);
                        othis.find('input[name="endCityName"]').val(obj.data.endCityName);
                        othis.find('input[name="runRoute"]').val(obj.data.runRoute);
                        othis.find('input[name="runNum"]').val(obj.data.runNum);
                        othis.find('input[name="sumMileage"]').val(obj.data.sumMileage);
                        othis.find('input[name="carType"]').val(obj.data.carType);
                        othis.find('input[name="countType"]').val(obj.data.countType);
                        othis.find('input[name="countTime"]').val(obj.data.countTime);
                        othis.find('input[name="monthStr"]').val(obj.data.monthStr);
                        othis.find('input[name="countMonth"]').val(obj.data.countMonth);
                        othis.find('input[name="yearNum"]').val(obj.data.yearNum);
                        othis.find('input[name="quarterType"]').val(obj.data.quarterType);
                    }
                    ,yes: function(index, layero){
                        var submit = layero.find('iframe').contents().find("#CarMonthOftenrunRoute-form-edit");
                        submit.trigger('click');
                    }
                });
            }

            //点击事件
            var active = {
                //批量删除
                batchdel: function(){
                    var checkStatus = table.checkStatus('CarMonthOftenrunRoute-list')
                        ,checkData = checkStatus.data; //得到选中的数据

                    if(checkData.length === 0){
                        return layer.msg('请选择数据');
                    }

                    layer.confirm('确定删除吗？', function(index) {
                        var ids = "" ;
                        for(var i = 0;i<checkData.length;i++){
                            if(ids==""){
                                ids= checkData[i].id;
                            }else {
                                ids = ids+","+checkData[i].id;
                            }
                        }
                        admin.req({
                            url:layui.setter.basePath +'/admin/carMonthOftenrunRoute/deleteByIds.jsn',
                            data:{'ids':ids},
                            method:"post",
                            success:function (data) {
                                table.reload('CarMonthOftenrunRoute-list',
                                    {page:
                                        { curr: common.deleteDulJumpPage(checkStatus) // 执行页面跳转方法
                                        }
                                    }
                                );
                                layer.msg('删除成功', {
                                    icon: 1
                                });
                            },
                        });
                    });
                }
                //添加
                ,add: function(){
                    layer.open({
                        type: 2
                        ,title: '添加'
                        ,content: 'CarMonthOftenrunRouteAdd.html'
                        ,maxmin: true
                        ,area: ['550px', '550px']
                        ,btn: ['确定', '取消']
                        ,yes: function(index, layero){
                            //点击确认触发 iframe 内容中的按钮提交
                            var submit = layero.find('iframe').contents().find("#CarMonthOftenrunRoute-form-submit");
                            submit.click();
                        }
                    });
                }
            }
            //绑定点击事件
            $('.layui-btn.layuiadmin-btn-comm').on('click', function(){
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });


        });

</script>
</body>
</html>

