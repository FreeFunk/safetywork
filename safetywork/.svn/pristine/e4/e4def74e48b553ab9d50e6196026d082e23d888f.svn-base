    <div style="width: 820px;height: 100%;margin-left: 260px;margin-top: -463px;">
        <div id="tuPianId" class="layui-form-item" style="border: 1px solid #b3d4fc;width: 400px;height: 230px;display: inline-block;font-family: inherit;text-align-last: center;font-size: 20px;font-weight: bold;">

